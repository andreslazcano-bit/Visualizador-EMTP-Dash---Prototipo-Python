# ============================================================================
# VARIABLES DE ENTORNO - VISUALIZADOR EMTP
# ============================================================================
# Copiar este archivo a .env y configurar con valores reales
# NUNCA commitear el archivo .env con credenciales reales

# ============================================================================
# CONFIGURACIÓN GENERAL
# ============================================================================
APP_NAME=Visualizador EMTP
ENVIRONMENT=development  # development, staging, production
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
PORT=8050
HOST=0.0.0.0

# ============================================================================
# SQL SERVER - Base de Datos Institucional
# ============================================================================
SQL_SERVER_ENABLED=False
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server
SQL_SERVER_HOST=your-server.database.windows.net
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=emtp_database
SQL_SERVER_USERNAME=your_username
SQL_SERVER_PASSWORD=your_password
SQL_SERVER_ENCRYPT=yes
SQL_SERVER_TRUST_CERT=no

# ============================================================================
# POSTGRESQL - Alternativa
# ============================================================================
POSTGRES_ENABLED=False
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=emtp_db
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_password

# ============================================================================
# MYSQL - Alternativa
# ============================================================================
MYSQL_ENABLED=False
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=emtp_db
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_password

# ============================================================================
# SHAREPOINT - Integración con SharePoint Online
# ============================================================================
SHAREPOINT_ENABLED=False
SHAREPOINT_SITE_URL=https://tuempresa.sharepoint.com/sites/emtp
SHAREPOINT_CLIENT_ID=your_client_id
SHAREPOINT_CLIENT_SECRET=your_client_secret
SHAREPOINT_TENANT_ID=your_tenant_id
SHAREPOINT_USERNAME=your_email@tuempresa.com
SHAREPOINT_PASSWORD=your_password
# Carpetas específicas en SharePoint
SHAREPOINT_FOLDER_MATRICULA=Documentos Compartidos/Datos/Matricula
SHAREPOINT_FOLDER_DOCENTES=Documentos Compartidos/Datos/Docentes
SHAREPOINT_FOLDER_TITULADOS=Documentos Compartidos/Datos/Titulados

# ============================================================================
# ARCHIVOS LOCALES
# ============================================================================
LOCAL_DATA_ENABLED=True
LOCAL_DATA_PATH=./data
LOCAL_RAW_PATH=./data/raw
LOCAL_PROCESSED_PATH=./data/processed
LOCAL_GEOGRAPHIC_PATH=./data/geographic

# ============================================================================
# REDIS - Cache (Opcional)
# ============================================================================
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TIMEOUT=3600  # segundos

# ============================================================================
# AUTENTICACIÓN
# ============================================================================
AUTH_ENABLED=True
# Hash bcrypt de contraseñas - Generar con: python -c "import bcrypt; print(bcrypt.hashpw(b'tu_password', bcrypt.gensalt()).decode())"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5lRj3.Xgp7j5i  # password: admin123
# Lista de usuarios adicionales (JSON format)
USERS_JSON=[]

# ============================================================================
# JWT TOKENS
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# REPORTES
# ============================================================================
REPORTS_ENABLED=True
REPORTS_OUTPUT_PATH=./reports/output
REPORTS_TEMPLATES_PATH=./reports/templates
REPORTS_MAX_SIZE_MB=50

# ============================================================================
# LÍMITES Y PERFORMANCE
# ============================================================================
MAX_UPLOAD_SIZE_MB=100
MAX_ROWS_DISPLAY=10000
MAX_ROWS_EXPORT=100000
ENABLE_PROFILING=False

# ============================================================================
# SENTRY - Monitoreo de Errores (Opcional)
# ============================================================================
SENTRY_ENABLED=False
SENTRY_DSN=your-sentry-dsn

# ============================================================================
# AZURE / CLOUD (Opcional)
# ============================================================================
AZURE_STORAGE_ENABLED=False
AZURE_STORAGE_ACCOUNT_NAME=your_account
AZURE_STORAGE_ACCOUNT_KEY=your_key
AZURE_STORAGE_CONTAINER=emtp-data

# ============================================================================
# AWS S3 (Opcional)
# ============================================================================
AWS_S3_ENABLED=False
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=emtp-data
AWS_REGION=us-east-1
